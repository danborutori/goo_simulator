{
    "compilerOptions": {
		"strict": true,
        "target": "es6",
        "moduleResolution": "node",
        "module": "ES6",
        "esModuleInterop": true,
        "sourceMap": false,
        "noEmitOnError": true,
        "jsx": "react",
		"noImplicitAny": true,
        "lib": ["es6", "dom"],
    	"outDir": "../html/script",
		"rootDir": "src",
		"removeComments": true,
		"typeRoots": [
			"../node_modules/@types/"
		]
    },	
    "include": [
		"src/**/*.ts",
		"src/**/*.tsx",
		"../bower_components/three.js/examples/jsm/*.js"
	],
	"compileOnSave": true,
	"buildOnSave": true
}